{
    "info": {
        "_postman_id": "ev-range-prediction",
        "name": "EV Range Prediction API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "User Authentication",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" }
                        ],
                        "url": { "raw": "http://localhost:5000/api/users/register", "host": ["http://localhost:5000"], "path": ["api", "users", "register"] },
                        "body": { "mode": "raw", "raw": "{ \"name\": \"John Doe\", \"email\": \"john@example.com\", \"password\": \"password123\" }" }
                    }
                },
                {
                    "name": "Login User",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" }
                        ],
                        "url": { "raw": "http://localhost:5000/api/users/login", "host": ["http://localhost:5000"], "path": ["api", "users", "login"] },
                        "body": { "mode": "raw", "raw": "{ \"email\": \"john@example.com\", \"password\": \"password123\" }" }
                    }
                },
                {
                    "name": "Get User Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            { "key": "Authorization", "value": "Bearer {{token}}" }
                        ],
                        "url": { "raw": "http://localhost:5000/api/users/profile", "host": ["http://localhost:5000"], "path": ["api", "users", "profile"] }
                    }
                }
            ]
        },
        {
            "name": "Trips",
            "item": [
                {
                    "name": "Add Trip",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" },
                            { "key": "Authorization", "value": "Bearer {{token}}" }
                        ],
                        "url": { "raw": "http://localhost:5000/api/trips/add", "host": ["http://localhost:5000"], "path": ["api", "trips", "add"] },
                        "body": { "mode": "raw", "raw": "{ \"start_location\": \"Bangalore\", \"end_location\": \"Mumbai\", \"distance\": 980, \"elevation\": 100, \"traffic\": 30 }" }
                    }
                },
                {
                    "name": "Get Trip History",
                    "request": {
                        "method": "GET",
                        "header": [
                            { "key": "Authorization", "value": "Bearer {{token}}" }
                        ],
                        "url": { "raw": "http://localhost:5000/api/trips/history", "host": ["http://localhost:5000"], "path": ["api", "trips", "history"] }
                    }
                }
            ]
        },
        {
            "name": "Battery",
            "item": [
                {
                    "name": "Update Battery Status",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" },
                            { "key": "Authorization", "value": "Bearer {{token}}" }
                        ],
                        "url": { "raw": "http://localhost:5000/api/battery/update", "host": ["http://localhost:5000"], "path": ["api", "battery", "update"] },
                        "body": { "mode": "raw", "raw": "{ \"battery_level\": 80, \"charging_status\": \"Charging\" }" }
                    }
                },
                {
                    "name": "Get Battery Status",
                    "request": {
                        "method": "GET",
                        "header": [
                            { "key": "Authorization", "value": "Bearer {{token}}" }
                        ],
                        "url": { "raw": "http://localhost:5000/api/battery/status", "host": ["http://localhost:5000"], "path": ["api", "battery", "status"] }
                    }
                }
            ]
        },
        {
            "name": "Map & Route Optimization",
            "item": [
                {
                    "name": "Get Optimized Route",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" },
                            { "key": "Authorization", "value": "Bearer {{token}}" }
                        ],
                        "url": { "raw": "http://localhost:5000/api/maps/route", "host": ["http://localhost:5000"], "path": ["api", "maps", "route"] },
                        "body": { "mode": "raw", "raw": "{ \"start\": \"Bangalore\", \"destination\": \"Mumbai\" }" }
                    }
                }
            ]
        },
        {
            "name": "Machine Learning Model - EV Range Prediction",
            "item": [
                {
                    "name": "Predict EV Range",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" }
                        ],
                        "url": { "raw": "http://127.0.0.1:8000/predict/", "host": ["http://127.0.0.1:8000"], "path": ["predict"] },
                        "body": { "mode": "raw", "raw": "{ \"trip_distance\": 100, \"elevation_change\": 50, \"traffic_delay\": 20, \"battery_consumption\": 5 }" }
                    }
                }
            ]
        }
    ]
}
